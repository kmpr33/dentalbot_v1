# Exemplu fișier de configurare pentru DentalBot v1

APP_ENV=local
DATABASE_URL=sqlite:///./dentalbot.db
SECRET_KEY=changeme
JWT_EXPIRES_MIN=60

# Token de verificare pentru webhook‑ul Meta
META_VERIFY_TOKEN=changeme
# Token de acces pentru pagina Meta (Messenger)
META_PAGE_TOKEN=changeme
# ID WhatsApp Business
WHATSAPP_BUSINESS_ID=changeme
# Token pentru botul Telegram
TELEGRAM_BOT_TOKEN=changeme

CLINIC_NAME=Clinica Demo
BASE_URL=http://localhost:8000

# Chei suplimentare (pot fi rotite periodic)
JWT_PUBLIC_KEY_PATH=
JWT_PRIVATE_KEY_PATH=

# Debug și logging
LOG_LEVEL=info
LOG_FILE=dentalbot.log